			<a href="/"><span class="header-logo-s">S</span></a>
		</div>
		<div class="header-menu-button" id="menu-button">+ MENU</div>
		<div class="header-title paragraph">
			<button id="objects-filter-button">+ FILTER</button>
		</div>
	</div>

	<!-- ------------------------------ filter ------------------------------ -->

	<div id="objects-filter-menu" class="grid-container objects-filter-menu">
		<div class='objects-filter-menu-measuring-wrapper'>
			<div class="grid-paragraph paragraph" style="line-height: 1.0;">
				<div class="gap-tiny"></div>
				{% assign number_of_tags = current_tags | size %}
				{% if collection.all_tags.size > 0 %}
					{% if number_of_tags == 0 %}
						<a href="/collections/objects/{{ tag | downcase }}?filter"><span class="arrow">→</span> ALL</a><br>
					{% else %}
						<a href="/collections/objects/{{ tag | downcase }}?filter"><span style="color: var(--blue)" class="arrow">→</span> ALL</a><br>
					{% endif %}
					{% for tag in collection.all_tags %}
						{% if current_tags contains tag %}
							<a href="/collections/objects/{{ tag | downcase }}?filter"><span class="arrow">→</span> {{ tag | upcase}}</a><br>
						{% else %}
							<a href="/collections/objects/{{ tag | downcase }}?filter"><span style="color: var(--blue)" class="arrow">→</span> {{ tag | upcase}}</a><br>
						{% endif %}
					{% endfor %}
				{% endif %}
				<div class="gap"></div>
			</div>
		</div>
	</div>

