<style>

	.objects-filter-menu {
		background-color: var(--blue);
		color: var(--white);
		height: 0px;
		overflow: hidden;
	}

	.objects-filter-menu-animate {
		-webkit-transition: height 450ms cubic-bezier(0.19, 1, 0.22, 1);
		-moz-transition: height 450ms cubic-bezier(0.19, 1, 0.22, 1);
		-ms-transition: height 450ms cubic-bezier(0.19, 1, 0.22, 1);
		-o-transition: height 450ms cubic-bezier(0.19, 1, 0.22, 1);
		transition: height 450ms cubic-bezier(0.19, 1, 0.22, 1);
	}
</style>

<script>

	objectsFilterButton = document.getElementById("objects-filter-button");
	objectsFilterMenu = document.getElementById("objects-filter-menu");
	objectsItems = document.getElementById("objects-items");

	var objectsFilterIsShown = 0;

	// show filter on load if filtered

	var objectsFiltered = window.location.href.split('?').pop();
    if(objectsFiltered === "filter") {
    	objectsFilterIsShown = 1;
		objectsFilterMenu.style.height = document.querySelector('.objects-filter-menu-measuring-wrapper').clientHeight + "px";
		objectsFilterButton.innerHTML = "✕ FILTER"
    }

    // show/hide filters on click

    objectsFilterButton.addEventListener("click", function() {
    	if(objectsFilterIsShown === 0) {
    		objectsFilterIsShown = 1;
    		objectsFilterMenu.classList.add("objects-filter-menu-animate");
    		objectsFilterMenu.style.height = document.querySelector('.objects-filter-menu-measuring-wrapper').clientHeight + "px";
    		objectsFilterButton.innerHTML = "✕ FILTER"
    	} else {
    		objectsFilterIsShown = 0;
    		objectsFilterMenu.classList.add("objects-filter-menu-animate");
    		objectsFilterMenu.style.height = "0px";
    		objectsFilterButton.innerHTML = "+ FILTER"
    		window.history.replaceState({}, document.title, window.location.href.split('?')[0]);
    	}
    });

