<!-- ------------------------------ html ------------------------------ -->

<html>

	<title>CART ← SLATE + ASH</title>

	<!-- ------------------------------ header ------------------------------ -->

	<div class="header-container" style="background-color: var(--white);">
		<div class="header-logo title">
			<a href="/"><span class="header-logo-plus">+</span>A</a> → CART
			<br>
			<a href="/"><span class="header-logo-s">S</span></a>
		</div>
		<div class="header-menu-button" id="menu-button">+ MENU</div>
	</div>

	<!-- ------------------------------ body ------------------------------ -->

	<div style="background-color: #c38839">
		<div class="general-container paragraph-large scroll-fade-in">
			{% for item in cart.items %}
				<div class="cart-item" data-id="{{ item.id }}">
					<div><a href="{{ item.url }}">{{ item.title | upcase }} (<span id="cart-item-quantity">{{ item.quantity }}</span>)</a></div>
					<div id="cart-item-price">{{ item.original_price | times: item.quantity | money_without_trailing_zeros }}</div>
					<button type="button" class="cart-remove-button">✕</button>
					<div class="gap-small"></div>
				</div>
			{% endfor %}
			<a href="/checkout" style="color: var(--white)"><span class="arrow">→</span> CHECKOUT</a>
			<div class="gap"></div>
		</div>
	</div>
</html>

